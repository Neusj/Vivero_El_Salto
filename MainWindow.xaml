<Window x:Class="ViveroElSalto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViveroElSalto"
        mc:Ignorable="d"
        Title="Vivero el salto" Height="450" Width="800">
    <Grid>

        <DockPanel LastChildFill="False">
            <Menu x:Name="mnPrincipal" DockPanel.Dock="Top" IsMainMenu="True" Height="20">
                <MenuItem Header="Menú">
                    <MenuItem Header="Agregar" x:Name="AgregarPlanta" Click="Agregar_Click" />
                    <MenuItem Header="Listar Todas" x:Name="listar" Click="Listar_Click" />
                </MenuItem>
            </Menu>
            <Grid>
                <TextBlock x:Name="AdministratorNameTextBlock" 
                   Text="" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="300,201,0,0"
                   VerticalAlignment="Top"
                 />
            </Grid>
            

        </DockPanel>
    </Grid>
</Window>
